
<h2> Edit your destination </h2>

<form action='/destinations/<%=@destination.id%>' method="POST">
    <input type='hidden' type='hidden' name='_method' value='PATCH'>
    <label for='name'>Name of Destination:</label>
    <input type='text' id='name' name='name' value="<%=@destination.name%>" required>
    <br>
    <label for='location'>Location:</label>
    <input type='text' id='location' name='location' value="<%=@destination.location%>" required>
    <br>
    <label for='description'>Description:</label>
    <input type='text' id='description' name='description' value="<%=@destination.description%>" required><br>
    <br>
    <input type='submit' id='submit' value='Save'>
</form>

<form action="/destinations/<%=@destination.id%>/delete" method="POST">
    <input id='hidden' type='hidden' name='_method' value='DELETE'>
    <input type='submit' value='Delete Destination'>
</form>

